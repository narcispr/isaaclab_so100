<?xml version="1.0"?>
<robot name="valve">

  <!-- BASE CYLINDER -->
  <link name="valve_base">
    <visual>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0" iyz="0.0"/>
      <origin xyz="0 0 0.05"/>
    </inertial>
  </link>

  <!-- HANDLE: CROSS MADE OF TWO CYLINDERS -->
  <link name="valve_handle">
    <visual>
      <geometry>
        <cylinder length="0.20" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <visual>
      <geometry>
        <cylinder length="0.20" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.20" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <collision>
      <geometry>
        <cylinder length="0.20" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0" iyz="0.0"/>
      <origin xyz="0 0 0"/>
    </inertial>
  </link>

  <!-- SPHERES AT CROSS ENDS -->
  <!-- X+ -->
  <link name="handle_end_x_pos">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- X- -->
  <link name="handle_end_x_neg">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Y+ -->
  <link name="handle_end_y_pos">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Y- -->
  <link name="handle_end_y_neg">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- JOINTS TO SPHERES -->
  <joint name="joint_x_pos" type="fixed">
    <parent link="valve_handle"/>
    <child link="handle_end_x_pos"/>
    <origin xyz="0.10 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_x_neg" type="fixed">
    <parent link="valve_handle"/>
    <child link="handle_end_x_neg"/>
    <origin xyz="-0.10 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_y_pos" type="fixed">
    <parent link="valve_handle"/>
    <child link="handle_end_y_pos"/>
    <origin xyz="0 0.10 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_y_neg" type="fixed">
    <parent link="valve_handle"/>
    <child link="handle_end_y_neg"/>
    <origin xyz="0 -0.10 0" rpy="0 0 0"/>
  </joint>

  <!-- JOINT: REVOLUTE -->
  <joint name="valve_joint" type="revolute">
    <parent link="valve_base"/>
    <child link="valve_handle"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.1416" effort="5" velocity="1"/>
    <dynamics damping="0.05" friction="0.1"/>
  </joint>

</robot>
