<?xml version="1.0"?>
<robot name="valve">

  <!-- BASE CYLINDER -->
  <link name="valve_base">
    <visual>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
       <material name="gray">
            <color rgba="0.5 0.5 0.5 1"/>
        </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0" iyz="0.0"/>
      <origin xyz="0 0 0.05"/>
    </inertial>
  </link>

  <!-- HANDLE: CROSS MADE OF TWO BOXES -->
  <link name="valve_handle">
    <visual>
      <geometry>
        <box size="0.20 0.02 0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red">
         <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <visual>
      <geometry>
        <box size="0.02 0.20 0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.20 0.02 0.02"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.02 0.20 0.02"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0" iyz="0.0"/>
      <origin xyz="0 0 0"/>
    </inertial>
  </link>

  <!-- JOINT: REVOLUTE WITH LIMITS -->
  <joint name="valve_joint" type="revolute">
    <parent link="valve_base"/>
    <child link="valve_handle"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.1416" effort="5" velocity="1"/>
    <dynamics damping="0.05" friction="0.1"/>
  </joint>

</robot>